doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
  link(rel='stylesheet' href='/css/style.css')
  title UFS||Registration Form
form(action='',method='POST')
  img(src='/images/0_FornHeader.png' alt='')
  h1 Loan Registration Form
  .container
    .row
      .col-6
        label(for='') Surname
        br
        input(type='text' name='surName')
      .col-6
        label(for='') Given Name
        br
        input(type='text' name='givenName')
      .col-6
        label(for='') Nin
        br
        input(type='text' name='nin')
      .col-6.period
        label(for='') Date of birth
        br
        input(type='date' name='dateOfBirth')
      .col-6
        label(for='') Occupation
        br
        input(type='text' name='occupation')
      .col-6
        label(for='') Place of work
        br
        input(type='text' name=' placeOfWork')
      .col-6.period
        label(for='') Gender
        br
        select(name='gender' id='')
          option(value='') --Select Option--
          option(value='') Male
          option(value='') Female
      .col-6
        label(for='') Loan amount
        br
        input(type='number' name='loanAmount')
      .col-6
        label(for='') Loan security
        br
        input(type='text' name='loanSecurity')
      .col-6
        label(for='') Fall back Security
        br
        input(type='text' name='fallBackSecurity')
      div
        button(type='submit') Register
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
