doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Git
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p' crossorigin='anonymous')
  link(href='/style.css' rel='stylesheet')
section.h-100.h-custom(style='background-color: #8fc4b7;')
  .container.py-5.h-100
    .row.d-flex.justify-content-center.align-items-center.h-100
      .col-lg-8.col-xl-8
        .card.rounded-3
          img.w-100(src='../images/0_FornHeader.png' style='border-top-left-radius: .3rem; border-top-right-radius: .3rem; height: 120px;' alt='Sample photo')
          .card-body.p-4.p-md-5
            h3.mb-4.pb-2.pb-md-0.mb-md-5.px-md-2.color2 Loan Request Form
            form(action='/form', method='post' onsubmit='return myFunction()')
              .row
                .col-md-6.mb-4
                  .form-outline
                    label.form-label.color(for='surname') Surname
                    input#surname.form-control.form-control-lg(type='text' name='surname')
                    span#surnameError
                .col-md-6.mb-4
                  .form-outline
                    label.form-label.color(for='givenName') Given Name
                    input#givenname.form-control.form-control-lg(type='text' name='givenname')
                    span#givennameError
              .row
                .col-md-6.mb-4
                  .form-outline
                    label.form-label.color(for='nin') NIN
                    input#nin.form-control.form-control-lg(type='text' name='nin')
                    span#ninError
                .col-md-6.mb-4
                  .form-outline
                    label.form-label.color(for='date') Date of Birth
                    input#date.form-control.form-control-lg(type='date' name='date')
                    span#dateError
              .row
                .col-md-6.mb-4
                  .form-outline
                    label.form-label.color(for='occupation') Occupation
                    input#occupation.form-control.form-control-lg(type='text' name='occupation')
                    span#occupationError
                .col-md-6.mb-4
                  .form-outline
                    label.form-label.color(for='work') Place of Work
                    input#work.form-control.form-control-lg(type='text' name='work')
                    span#workError
              .row
                .col-md-6.mb-4
                  br
                  .row
                    .col-12
                      label.form-label.select-label.color Gender
                      select#gender.select.form-control-lg(name='gender')
                        option(value='Default') --Select Gender-- 
                        option(value='female') Male
                        option(value='female') Female
                      span#genderError
                .col-md-6.mb-4
                  .form-outline
                    label.form-label.color(for='loan') Loan Amount
                    input#loan.form-control.form-control-lg(type='number' name='loan')
                    span#loanError
              .row
                .col-md-6.mb-4
                  .form-outline
                    label.form-label.color(for='loan') Loan Security
                    input#security.form-control.form-control-lg(type='text' name='security')
                    span#securityError
                .col-md-6.mb-4
                  .form-outline
                    label.form-label.color(for='fallback') Fall Back Security
                    input#fallback.form-control.form-control-lg(type='text' name='fallback')
                    span#fallbackError
              div(style='text-align: right;')
                input.btn.btn-primary.btn-lg(type='submit' value='Submit' style='background-color: #1F4E79;')
script(src='/validation.js')
