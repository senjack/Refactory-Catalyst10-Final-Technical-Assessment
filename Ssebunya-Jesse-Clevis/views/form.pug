doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css' integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO' crossorigin='anonymous')
  link(rel='stylesheet' href='/css/form.css')
  title Uwezo Form
div(style='margin: 30px 30px 30px 30px')
  header
    div(style='background-color: rgb(61, 61, 107);height: 150px ;')
      img(src='/images/0_FornHeader.png' alt='the header image' width='100%' height='200px')
  br
  br
  br
  form#form(name="entryForm", action="/form", method="POST", onsubmit="return validate()")
    .form-row
      div(style='width:100%')
        h1     Loan Request Form
      .form-group.col-md-6
        label(for='surname') Surname
        input#inputEmail4.form-control(type='text' placeholder='')
        .text-danger#vsurname
      .form-group.col-md-6
        label(for='givenname') Given Name
        input#inputPassword4.form-control(type='text' placeholder='')
        .text-danger#givenname
      .form-group.col-md-6
        label(for='nin') NIN
        input#inputPassword4.form-control(type='text' placeholder='')
        .text-danger#vnin
      .form-group.col-md-6
        label(for='dob') Date of Birth 
        input#inputEmail4.form-control(type='date' placeholder='YY/MM/DD')
        .text-danger#vdob
      .form-group.col-md-6
        label(for='occupation') Occupation
        input#inputEmail4.form-control(type='text' placeholder='')
        .text-danger#voccupation
      .form-group.col-md-6
        label(for='placeofwork') Place of work
        input#inputPassword4.form-control(type='text' placeholder='')
        .text-danger#vpow
      .input-box(style='width: 50%;')
        span.details(style='width: 50%; padding-bottom:10px;' )  Gender
        select#select(name='category')
          option(value='default' selected='selected') --Select Gender--
          option(value='') Male
          option(value='') Female
      .form-group.col-md-6
        label(for='loanamount') Loan Amount
        input#inputPassword4.form-control(type='number' placeholder='')
        .text-danger#vloanamount
      .form-group.col-md-6
        label(for='loansecurity') Loan Security
        input#inputEmail4.form-control(type='text' placeholder='')
        .text-danger#vloansecurity
      .form-group.col-md-6
        label(for='fallbacksecurity') Fall Back Security
        input#inputPassword4.form-control(type='password' placeholder='')
        .text-danger#vfallback
      .form-group.col-md-6(style='margin-left:50%')
        button.btn.btn-primary(style='text-align: center; width: 100%; background-color: rgb(73, 73, 101);', type='submit',name= 'submit') Register
