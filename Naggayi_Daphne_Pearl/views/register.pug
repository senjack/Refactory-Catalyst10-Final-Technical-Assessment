doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Loan Registration Form
  link(rel='stylesheet' href='/bootstrap-5.1.3-dist/css/bootstrap.css')
  link(rel='stylesheet' href='/Css/index.css')
.container
  .title
    img(src='/images/0_FornHeader.png' alt='')
  h2 Loan Request Form
  form(action='/register' name='register' method='POST' onsubmit='registerValidate()')
    .user-details
      .input-box
        // surname
        span.details Surname
        input(type='text' name='surname')
      #surname.text-danger.font-weight-bold.small
      .input-box
        // given name
        span.details Given Name
        input(type='text' name='givename')
      // error
      #givename.text-danger.font-weight-bold.small
      .input-box
        // NIN
        span.details NIN
        input(type='text' name='nin')
      // error
      #nin.text-danger.font-weight-bold.small
      .input-box
        // Date of birth
        span.details Date of Birth
        input(type='datetime-local' name='dob')
      // error
      #dob.text-danger.font-weight-bold.small
      .input-box
        // Occupation
        span.details Occupation
        input(type='text' name='occupation')
      // error
      #occupation.text-danger.font-weight-bold.small
      .input-box
        // Place of work
        span.details Place of work
        input(type='text' name='placeofwork')
      // error
      #placeofwork.text-danger.font-weight-bold.small
      .input-box
        // Gender
        span.details Gender
        select#gender(name='gender')
          option(selected='') Gender
          option(value='female') Female
          option(value='Male') Male
      // error
      #gender.text-danger.font-weight-bold.small
      .input-box
        // Loan Amount
        span.details Loan Amount
        input(type='number' name='loanamount')
      // error
      #loanamount.text-danger.font-weight-bold.small
      .input-box
        // Loan Security
        span.details Loan Security
        input(type='text' name='loansecurity')
      // error
      #loansecurity.text-danger.font-weight-bold.small
      .input-box
        // Fall Back Security
        span.details Fall Back Security
        input(type='text' name='fallback')
      // error
      #fallback.text-danger.font-weight-bold.small
    button(value='submit') REGISTER
script(src='/bootstrap-5.1.3-dist/js/bootstrap.js')
script(src='/validations/index.js')
