doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Document
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
section.vh-100.gradient-custom
  .container.py-5.h-100
    .row.justify-content-center.align-items-center.h-100
      .col-12.col-lg-9.col-xl-7
        .card.shadow-2-strong.card-registration(style='border-radius: 15px;')
          .card-body.p-4.p-md-5
            h3.mb-4.pb-2.pb-md-0.mb-md-5 Loan Request Form
            form
              .row
                .col-md-6.mb-4
                  .form-outline
                    input#firstName.form-control.form-control-lg(type='text')
                    label.form-label(for='firstName') Sir Name
                    span#sirname 
                .col-md-6.mb-4
                  .form-outline
                    input#lastName.form-control.form-control-lg(type='text')
                    label.form-label(for='lastName') Given Name
                    span#givename
                .col-md-6.mb-4
                  .form-outline
                    input#lastName.form-control.form-control-lg(type='text')
                    label.form-label(for='lastName') NIN
                    span#nin 
                .col-md-6.mb-4
                  .form-outline
                    input#lastName.form-control.form-control-lg(type='text')
                    label.form-label(for='lastName') Date Of Birth
                    span#dateofbirth 
                .col-md-6.mb-4
                  .form-outline
                    input#lastName.form-control.form-control-lg(type='text')
                    label.form-label(for='lastName') Occupation
                    span#occupation 
                .col-md-6.mb-4
                  .form-outline
                    input#lastName.form-control.form-control-lg(type='text')
                    label.form-label(for='lastName') Place of Work
                    span#placeofwork
                .col-md-6.mb-4
                  .form-outline
                    input#lastName.form-control.form-control-lg(type='text')
                    label.form-label(for='lastName') Gender
                    span#gender
                .col-md-6.mb-4
                  .form-outline
                    input#lastName.form-control.form-control-lg(type='text')
                    label.form-label(for='lastName') Loan Amount
                    span#loanamount 
                .col-md-6.mb-4
                  .form-outline
                    input#lastName.form-control.form-control-lg(type='text')
                    label.form-label(for='lastName') Loan Security
                    span#loansecurity 
                .col-md-6.mb-4
                  .form-outline
                    input#lastName.form-control.form-control-lg(type='text')
                    label.form-label(for='lastName') Fall Back Security
                    span#securityfallback 
              .row
                .col-md-6.mb-4.d-flex.align-items-center
                  .mt-4.pt-2
                    input.btn.btn-primary.btn-lg(type='submit' value='Register')
